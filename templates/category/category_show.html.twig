{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


<div class="container-fluid">
  <div class="row">
    {% for article in articles %}
        <div class="col-lg-4 col-md-6">
            <div class="card">
                <img src="{{  asset('uploads/images/' ~ article.image) }}">
                    <div class="card-body">
                        <h2 class="card-text">
                        {{ article.title }}
                        </h2>
                        <p class="card-text">
                        {{ article.category.label }}
                        </p>
                        <p class="card-text">
                            {{ article.content | slice (0,50) }}
                        </p>
                        <a href="{{ path('article_show', { id: article.id }) }}" class="btn btn-primary" target="_blank"
                        >Voir l'article</a>
                    </div>
            </div>
        </div>
    {% endfor %}
</div>
</div>
{% endblock %}
